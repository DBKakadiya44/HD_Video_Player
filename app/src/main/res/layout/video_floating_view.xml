<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000">

    <RelativeLayout
        android:id="@+id/relative_lyt"
        android:layout_width="220dp"
        android:layout_height="130dp">

        <SurfaceView
            android:id="@+id/surf_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/backward"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/play_btn"
            android:background="#99262727"
            android:text="-10sec"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <ImageView
            android:padding="@dimen/_6sdp"
            android:visibility="gone"
            android:id="@+id/backward"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/play_btn"
            android:background="@drawable/icon_bg"
            android:src="@drawable/ic_forward_10_sec"
           />

        <Button
            android:id="@+id/play_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_pause"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="#99262727"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:50 /"
                android:textColor="#ffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 00:30"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:padding="@dimen/_6sdp"

            android:visibility="gone"
            android:id="@+id/forward"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/play_btn"
            android:background="@drawable/icon_bg"
            android:src="@drawable/ic_replay_10_sec"
             />


        <ImageView
            android:padding="@dimen/_6sdp"

            android:visibility="gone"
            android:id="@+id/repeat"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_above="@+id/play_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/icon_bg"
            android:src="@drawable/ic_repeat_off"
            />

        <TextView
            android:id="@+id/forward_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forward"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/play_btn"
            android:background="#99262727"
            android:text="+10sec"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <ImageView

            android:visibility="gone"
            android:id="@+id/close_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#99262727"
            android:src="@drawable/ic_close"
             />

        <ImageView
            android:padding="@dimen/_6sdp"


            android:visibility="gone"
            android:id="@+id/full_view"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="#99262727"
            android:src="@drawable/ic_fit_too_screen"
            />

        <ImageView
            android:padding="@dimen/_6sdp"

            android:visibility="gone"
            android:id="@+id/plus"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#99262727"
            android:src="@drawable/ic_zoom_in"
             />

        <ImageView
            android:padding="@dimen/_6sdp"

            android:id="@+id/minus"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#99262727"
            android:src="@drawable/ic_zoom_out"
            android:visibility="gone" />
    </RelativeLayout>
</FrameLayout>
