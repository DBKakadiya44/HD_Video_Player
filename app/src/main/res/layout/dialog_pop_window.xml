<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/trans"

        android:layout_centerInParent="true"
        android:padding="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Authorization"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />
            <ScrollView
                android:layout_weight="1"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Pop up video has has the following features:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="- Removable video player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="- Play video when the player is minmized"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="- Resize the video player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="- Lock the player on the screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="Using pop up play needs Floating window permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">
                <RelativeLayout
                    android:layout_margin="@dimen/_5sdp"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/cancle_b"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="CANCEL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/roundconner_button"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/allow_button"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="Allow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>







    </LinearLayout>
</RelativeLayout>
