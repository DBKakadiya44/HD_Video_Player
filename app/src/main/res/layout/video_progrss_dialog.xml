<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools">
    <LinearLayout
        android:gravity="center"
        android:background="#B4000000"

        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_with"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/list_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/view_list_layout"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/trans"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/video_thumb_list"
                                    android:layout_width="match_parent"
                                    android:scaleType="centerCrop"
                                    android:layout_height="match_parent"></ImageView>
                                <RelativeLayout
                                    android:layout_margin="@dimen/_3sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/duration_conner"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/list_video_duration"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:padding="@dimen/_1sdp"
                                        android:textSize="@dimen/_5sdp"
                                        android:textColor="@color/white"
                                        android:text="10:00"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"></TextView>
                                </RelativeLayout>
                                <com.bikomobile.donutprogress.DonutProgress
                                    android:layout_centerInParent="true"
                                    android:id="@+id/donut_progress"
                                    app:donut_finished_stroke_width="5dp"
                                    app:donut_finished_color="@color/comman"
                                    app:donut_show_text="false"
                                    app:donut_unfinished_color="@color/white"
                                    app:donut_unfinished_stroke_width="5dp"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    app:donut_progress="30"/>
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_play"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"></ImageView>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_gravity="center|top"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/list_video_name"
                                android:textSize="@dimen/_12sdp"
                                android:text="VID Video 2021"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">
                <RelativeLayout
                    android:id="@+id/replay_button"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"

                    android:background="@drawable/video_progress_conner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/_20sdp"
                        android:drawableLeft="@drawable/ic_rotate"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="Replay"
                        android:textSize="@dimen/_14sdp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/next_button"

                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@drawable/video_progress_conner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:id="@+id/delete_button"
                        android:drawablePadding="@dimen/_20sdp"
                        android:drawableLeft="@drawable/ic_next"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="Next"
                        android:textSize="@dimen/_14sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>